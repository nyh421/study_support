<div class="container my-5">
  <div class="row">
    <div class="col-12">
      <div class="offset-4">
        <h3 class="text-info">プロフィール編集</h3>
      </div>
      <div class="mt-4">
        <%= form_with model: @user, method: :patch do |f| %>
          <div class="field offset-4 mb-4">
            <%= f.label :profile_image, "プロフィール画像" %><br>
            <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
          </div>
          <div class="field offset-4 mb-4">
            <%= f.label :school_year, "学年" %><br>
            <%= f.select :school_year, [["中学1年","jhs_1"], ["中学2年","jhs_2"], ["中学3年","jhs_3"], ["高校1年","hs_1"], ["高校2年","hs_2"], ["高校3年","hs_3"], ["大学生以上","adult"]]%>
          </div>
          <div class="field offset-4 mb-4">
            <%= f.label :name, "ユーザーネーム" %><br>
            <%= f.text_field :name %>
          </div>
          <div class="field offset-4 mb-5">
            <%= f.label :email, "メールアドレス" %><br>
            <%= f.email_field :email %>
          </div>
          <div class="field offset-4">
            <%= f.submit "変更を保存", class: "btn btn-secondary" %>
          </div>
        <% end %>
      </div>
      <div class="mt-4 offset-4">
        <%= link_to "退会する", quit_path, class: "btn btn-danger" %>
      </div>
    </div>
  </div>
</div>
