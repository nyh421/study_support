<div class="container my-5">
  <div class="row">
    <div class="col-12">
      <div class="offset-3">
        <h3 class="text-info">科目編集</h3>
      </div>
      <div>
        <%= form_with model: @subject, url: subject_path(@subject), method: :patch do |f| %>
          <div class="d-flex offset-3 mt-4">
            <div>
              <%= f.label :name, "科目名", class: "mr-4" %>
              <%= f.text_field :name, placeholder: "(例)英語、簿記、漢字検定", autocomplete: "off", class: "mr-4" %>
            </div>
            <div>
              <%= f.submit "変更を保存", class: "btn btn-secondary" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
