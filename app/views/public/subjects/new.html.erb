<div class="container my-5">
  <div class="row">
    <div class="col-12">
      <div class="offset-3">
        <h3 class="text-info">科目新規登録</h3>
      </div>
      <div>
        <%= form_with model: @subject, url: subjects_path, method: :post do |f| %>
          <div class="d-flex offset-3 mt-4">
            <div>
              <%= f.label :name, "科目名", class: "mr-4"%>
              <%= f.text_field :name, placeholder: "(例)英語、簿記、漢字検定", autocomplete: "off", class: "mr-4" %>
            </div>
            <div>
              <%= f.submit "新規登録", class: "btn btn-secondary" %>
            </div>
          </div>
        <% end %>
      </div>
      <div class="offset-3 mt-5 mb-4">
        <h3 class="text-info">科目一覧</h3>
      </div>
      <div class="offset-3">
        <table class="table table-hover col-6">
          <thead class="bg-light">
            <tr>
              <th>科目名</th>
              <th>編集</th>
              <th>削除</th>
            </tr>
          </thead>
          <tbody>
            <% @subjects.each do |subject| %>
              <tr>
                <td><%= subject.name %></td>
                <td>
                  <%= link_to edit_subject_path(subject) do %>
                    <p>編集</p>
                  <% end %>
                </td>
                <td>
                  <%= link_to subject_path(subject), method: :delete do %>
                    <p>削除</p>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
