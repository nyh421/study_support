<div class="container my-3">
  <div class="row">
    <div class="col-12">
      <div class="offset-3">
        <h4>ユーザー新規登録</h4>
      </div>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>
        <div class="field offset-4 mb-1">
          <%= f.label :name, "ユーザーネーム" %><br>
          <%= f.text_field :name, autofocus: true, class: "col-8" %>
        </div>
        <div class="field offset-4 mb-1">
          <%= f.label :school_year, "学年" %><br>
          <%= f.select :school_year, [["中学1年","jhs_1"], ["中学2年","jhs_2"], ["中学3年","jhs_3"], ["高校1年","hs_1"], ["高校2年","hs_2"], ["高校3年","hs_3"], ["大学生以上","adult"]] %>
        </div>
        <div class="field offset-4 mb-1">
          <%= f.label :email, "メールアドレス" %><br>
          <%= f.email_field :email, autocomplete: "email", class: "col-8" %>
        </div>
        <div class="field offset-4 mb-1">
          <%= f.label :password, "パスワード" %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上)</em>
          <% end %><br>
          <%= f.password_field :password, autocomplete: "new-password", class: "col-8" %>
        </div>
        <div class="field offset-4 mb-2">
          <%= f.label :password_confirmation, "パスワード(確認用)" %><br>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "col-8" %>
        </div>
        <div class="actions offset-4 mb-4">
          <%= f.submit "新規登録", class: "btn btn-primary" %>
        </div>
      <% end %>
      <div class="offset-3">
        <p>会員登録がお済みの方</p>
      </div>
      <div class="offset-4">
        <p><%= render "public/shared/links" %>からログインを行なってください</p>
      </div>
    </div>
  </div>
</div>
