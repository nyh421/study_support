<div class="container my-5">
  <div class="row">
    <div class="col-12">
      <div class="offset-5">
        <h3 class="text-info">投稿編集</h3>
      </div>
      <div class="mt-4">
        <%= form_with model: @post_study_method, url: post_study_method_path, method: :patch do |f| %>
          <div class="field offset-5 mb-4">
            <%= f.label :title, "タイトル" %><br>
            <%= f.text_field :title, placeholder: "(例)英単語の覚え方", autocomplete: "off" %>
          </div>
          <div class="field offset-5 mb-4">
            <%= f.label :body, "本文" %><br>
            <%= f.text_area :body, autocomplete: "off" %>
          </div>
          <div class="field offset-5">
            <%= f.submit "変更を保存", class: "btn btn-secondary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
