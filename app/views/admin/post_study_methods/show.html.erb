<div class="container">
  <div class="row">
    <div class="col-4">
      <div class="mt-4">
        <h4 class="text-info">投稿詳細</h4>
      </div>
      <div class="card mt-4">
        <div class="card-header">
          <span>
            <%= link_to admin_user_path(@post_study_method.user) do %>
              <%= @post_study_method.user.name %>
            <% end %>
          </span>
          <span class="ml-5">
            <%= @post_study_method.created_at.strftime('%Y/%m/%d %H:%M')%>
          </span>
        </div>
        <div class="card-body">
          <h5 class="card-title">
            <%= @post_study_method.title %>
          </h5>
          <p class="card-text">
            <%= @post_study_method.body %>
          </p>
        </div>
        <div class="card-footer">
          <span>いいね数: <%= @post_study_method.favorites.count %></span>
          <span class="ml-4">コメント数: <%= @post_study_method.comments.count %></span>
          <div class="mt-2">
            <%= link_to "この投稿を削除する", admin_post_study_method_path(@post_study_method), method: :delete, data: {confirm: "本当に削除しますか？"} %>
          </div>
        </div>
      </div>
    </div>
    <div class="col-7 offset-1">
      <div class="mt-4">
        <h4 class="text-info">コメント一覧(<%= @post_study_method.comments.count %>件)</h4>
      </div>
      <div class="mt-4">
        <% @post_study_method.comments.reverse_each do |comment| %>
          <div class="border-bottom">
            <%= link_to admin_user_path(comment.user) do %>
              <span><%= comment.user.name %></span>
            <% end %>
            <span><%= comment.created_at.strftime("%Y/%m/%d %H:%M") %></span>
            <p><%= comment.comment %></p>
            <p><%= link_to "このコメントを削除する", admin_post_study_method_comment_path(comment.post_study_method, comment), method: :delete, data: {confirm: "本当に削除しますか？"} %></p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
