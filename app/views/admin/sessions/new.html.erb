<div class="container my-5">
  <div class="row">
    <div class="col-12">
      <div class="offset-3">
        <h3>管理者ログイン</h3>
      </div>
      <div>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field offset-3 mb-4">
            <%= f.label :email, "メールアドレス" %><br>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-8" %>
          </div>
          <div class="field offset-3 mb-3">
            <%= f.label :password, "パスワード" %><br>
            <%= f.password_field :password, autocomplete: "current-password", class: "col-8" %>
          </div>
          <div class="actions offset-3">
            <%= f.submit "ログイン", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
