<div class="container my-5">
  <div class="row">
    <div class="col-6 offset-3">
      <h3 class="text-info">ユーザー情報詳細</h3>
      <div class="mt-4">
        <table class="table table-bordered">
          <tr>
            <th>ユーザーID</th>
            <td><%= @user.id %></td>
          </tr>
          <tr>
            <th>ユーザーネーム</th>
            <td><%= @user.name %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td><%= @user.email %></td>
          </tr>
          <tr>
            <th>学年</th>
            <td><%= @user.school_year_i18n %></td>
          </tr>
          <tr>
            <th>ステータス</th>
            <td>
              <% if @user.is_deleted == false %>
                <p>有効</p>
              <% else %>
                <p>退会</p>
              <% end %>
            </td>
          </tr>
        </table>
      </div>
      <div>
        <%= link_to "編集する", edit_admin_user_path(@user), class: "btn btn-secondary" %>
      </div>
    </div>
  </div>
</div>
